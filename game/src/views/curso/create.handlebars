<div class="bs-component">
    <h2>Cursos</h2>
    <form method="post" action="/curso/create">
        <fieldset>
            <legend>Adicionar novo curso</legend>
            <div class="form-group">
                <label class="col-form-label mt-4" for="sigla">Sigla</label>
                <input type="text" class="form-control" id="sigla" name="sigla">
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome">
            </div>
            <div class="form-group">
                <label for="descricao" class="form-label mt-4">Descrição do curso</label>
                <textarea class="form-control" id="descricao" rows="3" name="descricao"></textarea>
            </div>
        </fieldset>
        <fieldset class="form-group">
            <legend class="mt-4">Radio buttons</legend>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" value="exatas"
                    checked="">
                <label class="form-check-label" for="optionsRadios1">
                    Ciências Exatas - computação, engenharia, matemática, estatística etc.
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" value="humanas">
                <label class="form-check-label" for="optionsRadios2">
                    Ciências Humanas - letras, psicologia, história, geografia etc.
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios3" value="biologicas">
                <label class="form-check-label" for="optionsRadios3">
                    Ciências Biológicas - medicina, odontologia, biologica, agrárias etc.
                </label>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>